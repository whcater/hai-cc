{
  "name": "cc-copilot",
  "productName": "CC Copilot",
  "version": "1.0.0",
  "description": "A cross-platform desktop GUI wrapper for claude-code",
  "main": "dist/main/main.js",
  "homepage": "https://cc-copilot.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yaakua/cc-copilot.com.git"
  },
  "author": {
    "name": "yangkui",
    "email": "yaakua@126.com"
  },
  "license": "MIT",
  "build": {
     "appId": "com.yourcompany.yourapp",
    "productName": "Your App",
    "afterSign": "scripts/notarize.js",
    "directories": {
      "buildResources": "resources"
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "files": [
      "dist/**/*",
      "!src",
      "!.git",
      "!docs",
      "!.vscode"
    ],
    "mac": {
      "icon": "resources/cc-copilot-icon512.png",
      "category": "public.app-category.developer-tools",
      "identity": "Developer ID Application: Oliver O (4MQ3AWP5NR)"
    },
    "win": {
      "icon": "resources/cc-copilot-icon512.png"
    },
    "linux": {
      "icon": "resources/cc-copilot-icon512.png"
    }
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "preview": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.45.1",
    "@types/express": "^5.0.3",
