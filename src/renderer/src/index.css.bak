@import url('https://rsms.me/inter/inter.css');
@tailwind base;
@tailwind components;
@tailwind utilities;

/* Claude-style color scheme */
:root {
  --claude-bg: #343130;
  --claude-sidebar: #2C2A29;
  --claude-accent: #D96D53;
  --claude-text-primary: #E5E3E1;
  --claude-text-secondary: #8F8C8A;
  --claude-border: #4A4746;
}

/* Custom scrollbar styles matching Claude design */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: var(--claude-sidebar);
}

::-webkit-scrollbar-thumb {
  background: var(--claude-border);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: #5A5653;
}

/* Terminal styles */
.xterm {
  font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
  font-size: 14px;
  font-feature-settings: "liga" 0;
  position: relative;
  user-select: none;
  -ms-user-select: none;
  -webkit-user-select: none;
}

.xterm.focus,
.xterm:focus {
  outline: none;
}

.xterm .xterm-helpers {
  position: absolute;
  top: 0;
  z-index: 5;
}

.xterm .xterm-helper-textarea {
  position: absolute;
  opacity: 0;
  left: -9999em;
  top: 0;
  width: 0;
  height: 0;
  z-index: -5;
  white-space: nowrap;
  overflow: hidden;
  resize: none;
}

/* Claude theme for the app */
body {
  background-color: var(--claude-bg);
  color: var(--claude-text-primary);
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  margin: 0;
  padding: 0;
}

#root {
  height: 100vh;
  overflow: hidden;
}

/* Utility class to hide scrollbar */
.scrollbar-hide {
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.scrollbar-hide::-webkit-scrollbar {
  display: none;
}

/* Blinking cursor effect */
.blinking-cursor {
  width: 8px;
  height: 1.2em;
  background-color: var(--claude-text-primary);
  animation: blink 1s step-end infinite;
}

@keyframes blink {
  from, to { background-color: transparent }
  50% { background-color: var(--claude-text-primary); }
}